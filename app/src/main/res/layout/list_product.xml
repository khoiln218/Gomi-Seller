<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="collection"
            type="vn.gomicorp.seller.data.source.model.data.Collection" />

        <variable
            name="productHandler"
            type="vn.gomicorp.seller.event.ProductHandler" />

        <variable
            name="collectionHandler"
            type="vn.gomicorp.seller.event.CollectionHandler" />

        <variable
            name="onLoadMoreListener"
            type="vn.gomicorp.seller.event.OnLoadMoreListener" />

        <variable
            name="productChange"
            type="vn.gomicorp.seller.data.source.model.data.Product" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_small"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_xsmall"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{collection.name}"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:gravity="center_vertical"
                    android:onClick="@{(v)->collectionHandler.onSelect(collection)}"
                    android:text="@string/view"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_size_small"
                    app:drawableTint="@color/colorSecondaryText" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_market_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:onLoadMoreListener="@{onLoadMoreListener}"
                app:productHandler="@{productHandler}"
                app:selectChange="@{productChange}"
                app:setProducts="@{collection}" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>