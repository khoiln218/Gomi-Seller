                        <!--                                setError="@{viewModel.verifyCodeError}"-->
                        <!--                                setErrorEnabled="@{viewModel.verifyCodeErrorEnable}"-->
                        <!--                                android:layout_width="0dp"-->
                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                android:layout_weight="1"-->
                        <!--                                app:hintEnabled="false">-->

                        <!--                                <EditText-->
                        <!--                                    android:id="@+id/input_code"-->
                        <!--                                    requestFocus="@{viewModel.verifyCodeFocus}"-->
                        <!--                                    android:layout_width="match_parent"-->
                        <!--                                    android:layout_height="wrap_content"-->
                        <!--                                    android:enabled="@{viewModel.verifyCodeEnable}"-->
                        <!--                                    android:hint="@string/hint_certification_code"-->
                        <!--                                    android:inputType="textEmailAddress"-->
                        <!--                                    android:singleLine="true"-->
                        <!--                                    android:text="@{viewModel.verifyCode}"-->
                        <!--                                    android:textAppearance="?android:textAppearance" />-->

                        <!--                            </com.google.android.material.textfield.TextInputLayout>-->

                        <!--                            <TextView-->
                        <!--                                android:id="@+id/text_timer"-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                android:gravity="center"-->
                        <!--                                android:text="@{viewModel.resendCode}"-->
                        <!--                                android:textAppearance="?android:textAppearance"-->
                        <!--                                android:textColor="@color/colorRed"-->
                        <!--                                android:visibility="@{viewModel.resendCodeShow?View.VISIBLE:View.GONE}" />-->

                        <!--                        </LinearLayout>-->

                        <Button
                            android:id="@+id/btn_update_info"
                            style="@style/AppTheme.ButtonPrimary"
                            android:layout_width="@dimen/button_width_180"
                            android:layout_height="wrap_content"
                            android:enabled="@{viewModel.updateEnable}"
                            android:onClick="@{(v)->viewModel.update()}"
                            android:text="@string/btn_complete" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- TODO: Change Password-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_xlarge">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/padding_large"
                            android:text="@string/change_password"
                            android:textAppearance="?android:textAppearance"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_old_password"
                            setError="@{viewModel.oldPasswordError}"
                            setErrorEnabled="@{viewModel.oldPasswordErrorEnable}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_medium"
                            app:passwordToggleEnabled="true">

                            <EditText
                                android:id="@+id/input_old_password"
                                requestFocus="@{viewModel.newPasswordFocus}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:afterTextChanged="@{(s) -> viewModel.afterPasswordChanged()}"
                                android:hint="@string/hint_old_password"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:text="@{viewModel.oldPassword}"
                                android:textAppearance="?android:textAppearance" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_new_password"
                            setError="@{viewModel.newPasswordError}"
                            setErrorEnabled="@{viewModel.newPasswordErrorEnable}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_medium"
                            app:passwordToggleEnabled="true">

                            <EditText
                                android:id="@+id/input_new_password"
                                requestFocus="@{viewModel.newPasswordFocus}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:afterTextChanged="@{(s) -> viewModel.afterPasswordChanged()}"
                                android:hint="@string/hint_new_password"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:text="@{viewModel.newPassword}"
                                android:textAppearance="?android:textAppearance" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_confirm_password"
                            setError="@{viewModel.confirmPasswordError}"
                            setErrorEnabled="@{viewModel.confirmPasswordErrorEnable}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_medium"
                            app:passwordToggleEnabled="true">

                            <EditText
                                android:id="@+id/input_confirm_password"
                                requestFocus="@{viewModel.confirmPasswordFocus}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:afterTextChanged="@{(s) -> viewModel.afterPasswordChanged()}"
                                android:hint="@string/hint_confirm_password"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:text="@{viewModel.confirmPassword}"
                                android:textAppearance="?android:textAppearance" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <Button
                            android:id="@+id/btn_change_password"
                            style="@style/AppTheme.ButtonPrimary"
                            android:layout_width="@dimen/button_width_180"
                            android:layout_height="wrap_content"
                            android:enabled="@{viewModel.changePasswordEnable}"
                            android:onClick="@{(v)->viewModel.changePassword()}"
                            android:text="@string/btn_complete" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/layout_progress"
            android:visibility="@{viewModel.isProgressing ? View.VISIBLE : View.GONE, default=gone}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>