<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="vn.gomicorp.seller.main.mypage.info.AccountInformationViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.mypage.info.AccountInformationActivity">

        <include layout="@layout/layout_action_bar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDivider"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <!-- TODO: Information-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        requestFocus="@{viewModel.changeInfoFocus}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_xlarge"
                        android:visibility="@{viewModel.changeInfoHide?View.GONE:View.VISIBLE}">

                        <!--Full name-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:textAppearance="?android:textAppearance"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_size_small" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_name"
                            setError="@{viewModel.fullNameError}"
                            setErrorEnabled="@{viewModel.fullNameErrorEnable}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_medium"
                            app:hintEnabled="false">

                            <EditText
                                android:id="@+id/input_name"
                                requestFocus="@{viewModel.fullNameFocus}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:afterTextChanged="@{(s) -> viewModel.afterFullNameChanged(s)}"
                                android:hint="@string/hint_name"
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:text="@={viewModel.fullName}"
                                android:textAppearance="?android:textAppearance" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!--Ngày sinh-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/birthday"
                            android:textAppearance="?android:textAppearance"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_size_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_medium"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:hintEnabled="false">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/hint_birthday"
                                    android:singleLine="true"
                                    android:text="@{viewModel.birthday}"
                                    android:textAppearance="?android:textAppearance" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                style="@style/AppTheme.ButtonOutline"
                                android:layout_width="@dimen/button_width_108"
                                android:layout_height="@dimen/button_height_small"
                                android:onClick="@{(v)->viewModel.changeBirthday()}"
                                android:text="@string/btn_change" />

                        </LinearLayout>

                        <!--Giới tính-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_xsmall"
                            android:text="@string/gender"
                            android:textAppearance="?android:textAppearance"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_size_small" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_medium"
                            android:background="@drawable/bg_location">

                            <Spinner
                                setGenderAdapter="@{viewModel.genderAdapter}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorAccent"
                                android:onItemSelected="@{(p, v, pos, id) -> viewModel.onItemSelected(pos)}"
                                app:setSelect="@{viewModel.gender}"
                                tools:listitem="@android:layout/simple_spinner_item" />
                        </RelativeLayout>

                        <!--User name-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textAppearance="?android:textAppearance"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_size_small" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_email"
                            setError="@{viewModel.emailError}"
                            setErrorEnabled="@{viewModel.emailErrorEnable}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_medium"
                            app:hintEnabled="false">

                            <EditText
                                android:id="@+id/input_email"
                                requestFocus="@{viewModel.emailFocus}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:hint="@string/hint_email"
                                android:inputType="textEmailAddress"
                                android:singleLine="true"
                                android:text="@{viewModel.email}"
                                android:textAppearance="?android:textAppearance" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!--Phone Number-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/phone_number"
                            android:textAppearance="?android:textAppearance"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_size_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_medium"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/input_layout_phone_number"
                                setError="@{viewModel.phoneNumberError}"
                                setErrorEnabled="@{viewModel.phoneNumberErrorEnable}"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:hintEnabled="false">

                                <vn.gomicorp.seller.widgets.PrefixEditText
                                    android:id="@+id/input_phone_number"
                                    requestFocus="@{viewModel.phoneNumberFocus}"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:afterTextChanged="@{(s) -> viewModel.afterPhoneNumberChanged(s)}"
                                    android:enabled="false"
                                    android:hint="@string/hint_phone_number"
                                    android:inputType="phone"
                                    android:singleLine="true"
                                    android:text="@{viewModel.phoneNumber}"
                                    android:textAppearance="?android:textAppearance" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <!--                            <Button-->
                            <!--                                android:id="@+id/btn_request_code"-->
                            <!--                                style="@style/AppTheme.ButtonOutline"-->
                            <!--                                android:layout_width="@dimen/button_width_108"-->
                            <!--                                android:layout_height="@dimen/button_height_small"-->
                            <!--                                android:enabled="@{viewModel.requestCodeEnable}"-->
                            <!--                                android:onClick="@{(v)->viewModel.sendCode()}"-->
                            <!--                                android:text="@string/send_code" />-->

                        </LinearLayout>


                        <!--Certification code-->
                        <!--                        <TextView-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:text="@string/certification_code"-->
